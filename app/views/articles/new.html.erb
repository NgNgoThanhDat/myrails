<h1>This is a new article</h1>

<%= form_for :article, url: articles_path do |f| %>
  <div class="form_group">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="form_group">
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </div>

  <%= f.submit "Submit" %>

<% end %>
